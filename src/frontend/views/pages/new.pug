extends ../layout/layout.pug
include ../mixins/breadcrumb

block content
  +breadcrumb(resource)
  section.view-edit
    form(method='POST' action=h.listUrl(resource))
      .level
        h3.title
          a.button.is-text.is-back(href=h.listUrl(resource))
            span.icon.is-small
              i.icomoon-pagination-left
          | Create #{resource.decorate().getResourceName()}
        .field.is-grouped
          .control
            button.button.is-primary(type='submit')
              span(class="icon is-small")
                i.icomoon-save
              .btn-text Save
      .box
        for prop in resource.decorate().getEditProperties()
          .field!= prop.renderEdit(record)