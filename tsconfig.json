{
  "compilerOptions": {
      "outDir": "./lib",
      "target": "ESNext",
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./types",
      "emitDeclarationOnly": false,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "skipLibCheck": true,
      "types": [
        "node"
      ]
  },
  "include": [
    "./vendor-types/**/*",
    "./src/**/*",
    "./spec/**/*"
  ],
  "exclude": [
    "./node-modules"
  ]
}
