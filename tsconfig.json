{
  "compilerOptions": {
      "outDir": "./lib",
      "module": "commonjs",
      "target": "ESNext",
      "lib": [
        "es2018",
        "DOM"
      ],
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./types",
      "emitDeclarationOnly": false,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "skipLibCheck": true,
      "types": [
        "mocha",
        "node"
      ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node-modules",
    "**/*.spec.ts"
  ]
}
